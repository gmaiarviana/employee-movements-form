# Google Sheets Configuration
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEET_RANGE=A:E

# Google Service Account Configuration
# Caminho para o arquivo JSON da Service Account (dentro do container)
GOOGLE_SERVICE_ACCOUNT_PATH=/app/credentials/service-account-key.json

# Database Configuration (usar as mesmas do docker-compose)
DB_HOST=db
DB_PORT=5432
DB_NAME=employee_movements
DB_USER=app_user
DB_PASSWORD=app_password

# Sync Configuration
BACKUP_BEFORE_SYNC=true
VALIDATE_INTEGRITY=true

# Logging
NODE_ENV=development